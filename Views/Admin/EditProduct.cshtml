@model e_ticaret.Models.Product
@{
    ViewData["Title"] = "Ürün Düzenle";
}

<div class="container-fluid py-4" style="margin-top: 70px;">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">Ürün Düzenle</h5>
                </div>
                <div class="card-body">
                    <form method="post" action="@Url.Action("EditProduct", "Admin")">
                        <input type="hidden" asp-for="Id" />
                        
                        <div class="mb-3">
                            <label asp-for="Name" class="form-label">Ürün Adı</label>
                            <input asp-for="Name" class="form-control" required>
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Description" class="form-label">Açıklama</label>
                            <textarea asp-for="Description" class="form-control" rows="3" required></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Category" class="form-label">Kategori</label>
                            <select asp-for="Category" class="form-control" required>
                                <option value="Bilgisayar">Bilgisayar</option>
                                <option value="Telefon">Telefon</option>
                                <option value="Tablet">Tablet</option>
                                <option value="Aksesuar">Aksesuar</option>
                            </select>
                            <span asp-validation-for="Category" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Price" class="form-label">Fiyat</label>
                            <input asp-for="Price" type="number" class="form-control" step="0.01" required>
                            <span asp-validation-for="Price" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="StockQuantity" class="form-label">Stok Miktarı</label>
                            <input asp-for="StockQuantity" type="number" class="form-control" required>
                            <span asp-validation-for="StockQuantity" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="ImageUrl" class="form-label">Ürün Görseli URL</label>
                            <input asp-for="ImageUrl" class="form-control" required>
                            <span asp-validation-for="ImageUrl" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Rating" class="form-label">Değerlendirme</label>
                            <input asp-for="Rating" type="number" class="form-control" step="0.1" min="0" max="5">
                            <span asp-validation-for="Rating" class="text-danger"></span>
                        </div>

                        <div class="d-flex justify-content-between">
                            <a href="@Url.Action("Index", "Admin")" class="btn btn-secondary">İptal</a>
                            <button type="submit" class="btn btn-primary">Kaydet</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 