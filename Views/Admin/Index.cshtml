@{
    ViewData["Title"] = "Admin Panel";
}

<div class="container my-5">
    <h2>Admin Dashboard</h2>

    <!-- İstatistik Kartları -->
    <div class="row mt-4">
        <div class="col-md-3 mb-3">
            <div class="card bg-primary text-white">
                <div class="card-body">
                    <h5>Toplam Sipariş</h5>
                    <h2>@ViewBag.OrderCount</h2>
                </div>
            </div>
        </div>
        <div class="col-md-3 mb-3">
            <div class="card bg-success text-white">
                <div class="card-body">
                    <h5>Toplam Kullanıcı</h5>
                    <h2>@ViewBag.UserCount</h2>
                </div>
            </div>
        </div>
        <div class="col-md-3 mb-3">
            <div class="card bg-info text-white">
                <div class="card-body">
                    <h5>Toplam Ürün</h5>
                    <h2>@ViewBag.ProductCount</h2>
                </div>
            </div>
        </div>
        <div class="col-md-3 mb-3">
            <div class="card bg-warning text-white">
                <div class="card-body">
                    <h5>Toplam Gelir</h5>
                    <h2>₺@ViewBag.TotalRevenue</h2>
                </div>
            </div>
        </div>
    </div>

    <!-- Hızlı İşlemler -->
    <div class="row mt-4">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">Son Siparişler</h5>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>Sipariş No</th>
                                    <th>Müşteri</th>
                                    <th>Tutar</th>
                                    <th>Durum</th>
                                    <th>İşlem</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var order in ViewBag.RecentOrders)
                                {
                                    <tr>
                                        <td>@order.OrderNumber</td>
                                        <td>@order.UserFullName</td>
                                        <td>₺@order.TotalAmount</td>
                                        <td><span
                                                class="badge bg-@(order.OrderStatus == "Tamamlandı" ? "success" : "warning")">@order.OrderStatus</span>
                                        </td>
                                        <td>
                                            <a href="@Url.Action("OrderDetail", "Admin", new { id = order.Id })"
                                                class="btn btn-sm btn-info">Detay</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="card-title mb-0">Stok Durumu</h5>
                    <a href="@Url.Action("AddProduct", "Admin")" class="btn btn-sm btn-success">
                        <i class="bi bi-plus"></i> Yeni Ürün Ekle
                    </a>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>Ürün ID</th>
                                    <th>Ürün</th>
                                    <th>Fiyat</th>
                                    <th>Stok</th>
                                    <th>Durum</th>
                                    <th>İşlemler</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var product in ViewBag.AllProducts)
                                {
                                    <tr>
                                        <td>@product.Id</td>
                                        <td>@product.Name</td>
                                        <td>₺@product.Price</td>
                                        <td>@product.StockQuantity</td>
                                        <td>
                                            @if (product.StockQuantity == 0)
                                            {
                                                <span class="badge bg-danger">Tükendi</span>
                                            }
                                            else if (product.StockQuantity < 5)
                                            {
                                                <span class="badge bg-danger">Kritik</span>
                                            }
                                            else if (product.StockQuantity < 10)
                                            {
                                                <span class="badge bg-warning">Az</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-success">Yeterli</span>
                                            }
                                        </td>
                                        <td>
                                            <div class="btn-group">
                                                <a href="@Url.Action("EditProduct", "Admin", new { id = product.Id })"
                                                    class="btn btn-sm btn-warning">Düzenle</a>
                                                <a href="@Url.Action("UpdateStock", "Admin", new { id = product.Id })"
                                                    class="btn btn-sm btn-info">Stok Güncelle</a>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>





           