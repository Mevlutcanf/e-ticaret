@model e_ticaret.Models.Order
@{
    ViewData["Title"] = "Sipariş Detayı";
}

<div class="container my-5">
    <div class="card">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h3>Sipariş #@Model.OrderNumber</h3>
            <span
                class="badge bg-@(Model.OrderStatus == "Tamamlandı" ? "success" : "warning")">@Model.OrderStatus</span>
        </div>
        <div class="card-body">
            <div class="row mb-4">
                <div class="col-md-6">
                    <h5>Müşteri Bilgileri</h5>
                    <p><strong>Ad Soyad:</strong> @ViewBag.UserFullName</p>
                    <p><strong>Adres:</strong> @Model.Address</p>
                    <p><strong>Şehir:</strong> @Model.City</p>
                    <p><strong>Posta Kodu:</strong> @Model.PostalCode</p>
                </div>
                <div class="col-md-6">
                    <h5>Sipariş Bilgileri</h5>
                    <p><strong>Tarih:</strong> @Model.OrderDate.ToString("dd.MM.yyyy HH:mm")</p>
                    <p><strong>Toplam Tutar:</strong> ₺@Model.TotalAmount</p>
                    <form method="post" asp-action="UpdateOrderStatus" asp-controller="Admin" class="mt-3">
                        <input type="hidden" name="id" value="@Model.Id" />
                        <div class="input-group">
                            <select name="status" class="form-select">
                                @{
                                    var statuses = new[] { "Hazırlanıyor", "Kargoya Verildi", "Teslim Edildi", "İptal Edildi" };
                                    foreach (var status in statuses)
                                    {
                                        <option value="@status" selected="@(Model.OrderStatus == status)">@status</option>
                                    }
                                }
                            </select>
                            <button type="submit" class="btn btn-primary">Durumu Güncelle</button>
                        </div>
                    </form>
                </div>
            </div>

            <h5>Sipariş Detayı</h5>
            <table class="table">
                <thead>
                    <tr>
                        <th>Ürün</th>
                        <th>Birim Fiyat</th>
                        <th>Miktar</th>
                        <th>Toplam</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Items)
                    {
                        <tr>
                            <td>@item.Product?.Name</td>
                            <td>₺@item.Product?.Price</td>
                            <td>@item.Quantity</td>
                            <td>₺@(item.Product != null ? item.Product.Price * item.Quantity : 0)</td>
                        </tr>
                    }
                </tbody>
                <tfoot>
                    <tr>
                        <td colspan="3" class="text-end"><strong>Toplam:</strong></td>
                        <td><strong>₺@Model.TotalAmount</strong></td>
                    </tr>
                </tfoot>
            </table>

            <div class="mt-3">
                <a href="@Url.Action("Index", "Admin")" class="btn btn-secondary">
                    <i class="bi bi-arrow-left"></i> Geri Dön
                </a>
            </div>
        </div>
    </div>
</div>
