@model e_ticaret.Models.Product
@{
    ViewData["Title"] = "Yeni Ürün Ekle";
}

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h3 class="mb-0">Yeni Ürün Ekle</h3>
                </div>
                <div class="card-body">
                    <form asp-action="AddProduct" method="post">
                        <div class="mb-3">
                            <label class="form-label">Ürün Adı</label>
                            <input asp-for="Name" class="form-control" required>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Açıklama</label>
                            <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Fiyat</label>
                            <input asp-for="Price" type="number" step="0.01" class="form-control" required>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Stok Miktarı</label>
                            <input asp-for="StockQuantity" type="number" class="form-control" required>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Görsel URL</label>
                            <input asp-for="ImageUrl" type="url" class="form-control" required>
                        </div>
                        <div class="text-end">
                            <a href="@Url.Action("Index")" class="btn btn-secondary">İptal</a>
                            <button type="submit" class="btn btn-primary">Kaydet</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
