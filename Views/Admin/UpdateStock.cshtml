@model e_ticaret.Models.Product
@{
    ViewData["Title"] = "Stok G端ncelle";
}

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h3 class="mb-0">Stok G端ncelle - @Model.Name</h3>
                </div>
                <div class="card-body">
                    <form id="updateStockForm">
                        <input type="hidden" id="productId" value="@Model.Id" />
                        <div class="form-group">
                            <label>Mevcut Stok: @Model.StockQuantity</label>
                            <input type="number" id="newStock" class="form-control" value="@Model.StockQuantity" min="0" />
                        </div>
                        <button type="submit" class="btn btn-primary mt-2">G端ncelle</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $("#updateStockForm").submit(function (e) {
            e.preventDefault();
            $.post("/Admin/UpdateStock", {
                productId: $("#productId").val(),
                newStock: $("#newStock").val()
            }).done(function (response) {
                if (response.success) {
                    alert("Stok g端ncellendi");
                    location.reload();
                } else {
                    alert("Hata: " + response.message);
                }
            });
        });
    </script>
}
